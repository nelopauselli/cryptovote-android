<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/default_margin"
    android:background="@drawable/card_bg"
    android:elevation="@dimen/list_item"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/choice_layout"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_weight="2"
        android:orientation="vertical"
        android:padding="@dimen/margin_large">

        <TextView
            android:id="@+id/choice_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="[choice label]"
            android:textSize="@dimen/text_extra_large" />


        <TextView
            android:id="@+id/choice_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="[choice id]"
            android:textSize="@dimen/text_muted" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/choice_votes_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:gravity="center|end"
        android:orientation="vertical"
        android:padding="@dimen/margin_large">

        <EditText
            android:id="@+id/choice_votes"
            android:layout_width="wrap_content"
            android:minWidth="@dimen/text_box_min_width"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/text_box"
            android:inputType="number"
            android:padding="@dimen/default_padding"
            android:textAlignment="textEnd"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="@dimen/text_extra_large" />
    </LinearLayout>
</LinearLayout>
