<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="@dimen/margin_large"
    android:paddingVertical="@dimen/margin_medium"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/card_bg"
        android:elevation="@dimen/list_item"
        android:padding="@dimen/default_padding"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/choice_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/choice_order"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center|start"
                android:paddingLeft="@dimen/default_padding"
                android:text="#"
                android:textColor="@color/colorPrimaryText"
                android:textSize="@dimen/text_extra_extra_large" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:orientation="vertical"
                android:padding="@dimen/default_padding">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/choice_text"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:gravity="left|start"
                        android:paddingLeft="@dimen/default_padding"
                        android:text="Pepe"
                        android:textColor="@color/colorPrimaryText"
                        android:textSize="@dimen/text_extra_extra_large" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center|end"
                        android:paddingLeft="@dimen/default_padding"
                        android:text="@string/votes"
                        android:textColor="@color/colorPrimaryText"
                        android:textSize="@dimen/text_title_size" />

                    <TextView
                        android:id="@+id/recount_votes"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center|end"
                        android:paddingLeft="@dimen/default_padding"
                        android:text="12"
                        android:textColor="@color/colorPrimaryText"
                        android:textSize="@dimen/text_title_size" />
                </LinearLayout>

                <TextView
                    android:id="@+id/choice_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/default_padding"
                    android:text="[choice id]"
                    android:textAlignment="center"
                    android:textColor="@color/colorPrimaryText"
                    android:textSize="@dimen/text_muted" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>